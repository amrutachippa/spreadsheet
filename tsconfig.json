{
  "compilerOptions": {
    "target": "esnext",                   // Set to "esnext" to use the latest JavaScript features
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,                     // Allow JavaScript files to be compiled
    "skipLibCheck": true,                // Skip type checking of declaration files
    "strict": true,                      // Enable all strict type-checking options
    "noEmit": true,                      // Do not emit output files
    "esModuleInterop": true,             // Enable compatibility with CommonJS modules
    "module": "esnext",                  // Use ESNext module syntax
    "moduleResolution": "node",          // Use Node module resolution strategy
    "resolveJsonModule": true,           // Allow importing JSON files
    "isolatedModules": true,             // Ensure each file is treated as an isolated module
    "jsx": "preserve",                  // Preserve JSX syntax for Next.js
    "incremental": true,                // Enable incremental compilation
    "paths": {
      "@/*": ["./*"]                    // Configure path mapping
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",                    // Include Next.js environment types
    "**/*.ts",                          // Include all TypeScript files
    "**/*.tsx",                         // Include all TypeScript JSX files
    ".next/types/**/*.ts"               // Include types generated by Next.js
  ],
  "exclude": [
    "node_modules"                      // Exclude node_modules
  ]
}
